{
    "name": "Rocket.Chat",
    "id": "rocketchat",
    "packaging_format": 1,
    "description": {
        "en": "Team chat collaboration platform",
        "fr": "Plateforme de collaboration de chat"
    },
    "version": "3.7.1~ynh1",
    "url": "https://github.com/RocketChat/Rocket.Chat",
    "license": "MIT",
    "maintainer": {
        "name": "",
        "email": ""
    },
    "requirements": {
        "yunohost": ">= 4.0"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for Rocket.Chat",
                    "fr": "Choisissez un nom de domaine pour Rocket.Chat"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Rocket.Chat",
                    "fr": "Choisissez un chemin pour Rocket.Chat"
                },
                "example": "/",
                "default": "/"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            }
        ]
    }
}
