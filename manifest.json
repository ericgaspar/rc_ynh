{
    "name": "RocketChat",
    "id": "rocketchat",
    "packaging_format": 1,
    "description": {
        "en": "Team chat collaboration platform",
        "fr": "Plateforme de collaboration de chat"
    },
    "version": "3.5.3~ynh1",
    "url": "https://example.com",
    "license": "free",
    "maintainer": {
        "name": "John doe",
        "email": "john.doe@example.com",
        "url": "http://example.com"
    },
    "requirements": {
        "yunohost": ">= 3.8.1"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for RocketChat",
                    "fr": "Choisissez un nom de domaine pour RocketChat"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Rocketchat",
                    "fr": "Choisissez un chemin pour Rocketchat"
                },
                "example": "/",
                "default": "/"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            }
        ]
    }
}
